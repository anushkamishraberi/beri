def mid_element(arr):
    n = len(arr)
    mid = n // 2
    if n % 2 == 1:  # Odd length
        return arr[mid]
    else:  # Even length
        # Return the two middle elements as a tuple
        return (arr[mid - 1], arr[mid])
sorted_arr_odd = [1, 3, 5, 7, 9]
sorted_arr_even = [2, 4, 6, 8]
print("Mid element (odd length):", mid_element(sorted_arr_odd))   # Output: 5
print("Mid elements (even length):", mid_element(sorted_arr_even)) # Output: (4, 6)
